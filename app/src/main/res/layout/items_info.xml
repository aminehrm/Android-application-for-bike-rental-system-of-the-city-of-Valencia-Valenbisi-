<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    app:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="9"


    <TextView
        android:id="@+id/detailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="Details"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_column="0"
        android:layout_row="0" />


    <TextView
        android:id="@+id/numberTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Number"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Address"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Total"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/availableTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Available"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="4" />

    <TextView
        android:id="@+id/freeTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Free"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/coordinatesTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Coordinates"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="6" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />


    <TextView
        android:id="@+id/distance"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Distance"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />


    <TextView
        android:id="@+id/update"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Last Update"
        android:textColor="#D73F51B5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reportsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="Reports"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/reportsLV"
        android:layout_width="313dp"
        android:layout_height="386dp"
        android:layout_row="9"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom|fill_vertical"
        android:layout_marginTop="70dp" />


</GridLayout>